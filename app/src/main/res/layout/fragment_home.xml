<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.bottomnav.home.HomeFragment"
    tools:ignore="ScrollViewSize">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true" >
    </com.google.android.material.progressindicator.LinearProgressIndicator>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/card_slide"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:elevation="10dp"/>
        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/tablayout"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:ci_animator="@animator/scale_with_alpha"
            app:ci_drawable="@drawable/circle" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_semua_kitab"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_all_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        tools:listitem="@layout/item_book_home">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nahwu Shorof"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_nahwu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        tools:listitem="@layout/item_book_home">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Akidah Akhlak"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_akidah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        tools:listitem="@layout/item_book_home">
    </androidx.recyclerview.widget.RecyclerView>


    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp">
    </Space>
</LinearLayout>
</ScrollView>